<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? yield(:title) : "CannaNerd" %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div id='wrapper'>
		<div id='flash' class='sg-28'>
		<% flash.each do |key,value| %>
			<div class="<%= key %>"><%= value %></div>
		<% end %>
		</div>
		<div id='container'>
			<%= render 'layouts/navbar' %>
			<div id='main'>
				<%= yield %>
				<div class='clear'></div>
			</div>
			<%= render 'layouts/footer' %>
		</div>
	</div>
</body>
</html>
