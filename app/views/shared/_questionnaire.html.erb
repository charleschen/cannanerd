<div id='questionnaire_real' class='sg-15'>
	<%= form_for quiz, :url => take_quiz_path, :remote => true do |f| %>
	<ol>
	<% quiziations.each do |quiziation| %>
		<li class="questions">
			<%= quiziation.question.content %>
			<ul>
			<% quiziation.question.answers.each do |answer| %>
				<%= f.fields_for :quiziations, quiziation do |builder| %>
					<li><%= builder.check_box :selected_answers_hash, {}, "answer_#{answer.id};1","answer_#{answer.id};0" %><%= answer.content %></li>
				<% end %>
			<% end %>
			</ul>
		</li>
	<% end %>
	</ol>
	<%= f.submit 'back', :name => 'prev_page' unless quiz.first_page? %>
	<%= f.submit 'next', :name => 'next_page' unless quiz.last_page?%>
	<%= f.submit 'submit', :name => 'submit' if quiz.last_page? %>
	<% end %>
</div>


<% if false %>
	<%= f.fields_for :quiziations, quiziation do |builder| %>
		<%= builder.object.question.content %>
	  <ul>
	  <% builder.object.question.answers.each do |answer| %>
	    <li><%= builder.radio_button :selected_answer_id, answer.id %><%= answer.content %></li>
	  <% end %>
	  </ul>
	<% end %>
<% end %>