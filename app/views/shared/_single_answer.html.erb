<li id='single_answer' class="questions">
	<span class='small-title'><%= "#{quiziation.question.content}" %></span>
	<ul>
	<%= f.fields_for :quiziations, quiziation do |builder| %>
	  <% builder.object.question.answers.each do |answer| %>
	    <li class='small'><%= builder.radio_button :radio_answer, "answer_#{answer.id};1" %><%= answer.content %></li>
	  <% end %>
	<% end %>
	</ul>
</li>